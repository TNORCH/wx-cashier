/* 用户信息区域 */
.user-info {
  display: flex;
  align-items: center;
  padding: 20px;
  background-color: #f5f5f5;
}

.avatar {
  width: 60px;
  height: 60px;
  border-radius: 50%;
  margin-right: 15px;
}

.username {
  font-size: 18px;
  font-weight: bold;
  color: #333;
}

/* 功能列表 */
.menu-list {
  margin-top: 20px;
  background-color: #fff;
}

.menu-item {
  display: flex;
  align-items: center;
  padding: 15px;
  border-bottom: 1px solid #eee;
}

.menu-icon {
  width: 24px;
  height: 24px;
  margin-right: 10px;
}

.menu-title {
  font-size: 16px;
  flex-grow: 1;
}

.arrow-icon {
  width: 16px;
  height: 16px;
}
