.container {
  padding: 20rpx;
  background-color: #f5f5f5;  /* 背景颜色更柔和 */
  min-height: 100vh;  /* 保证容器至少占满整个视口高度 */
}

.title {
  font-size: 36rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
  color: #333;  /* 文字颜色 */
}

.product-list {
  display: flex;
  flex-direction: column;
  margin-bottom: 100rpx;  /* 留出空间给底部固定的商品管理 */
}

.product-item {
  position: relative; /* 设为相对定位 */
  display: flex;
  align-items: center;
  background-color: #fff;  /* 商品项背景 */
  border-radius: 8rpx;  /* 圆角更柔和 */
  padding: 15rpx;  /* 增加内边距 */
  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);  /* 阴影效果更柔和 */
  margin-bottom: 15rpx;  /* 调整间距 */
  transition: transform 0.3s; /* 添加过渡效果 */
}

.product-image {
  width: 90rpx;  /* 调整宽度 */
  height: 90rpx;  /* 调整高度 */
  border-radius: 8rpx;  /* 圆角 */
  overflow: hidden;  /* 隐藏超出部分 */
}

.product-name {
  flex: 1;
  font-size: 26rpx;  /* 字体稍小 */
  color: #444;  /* 文字颜色更柔和 */
}

.product-price {
  font-size: 26rpx;  /* 字体稍小 */
  color: #666;  /* 价格颜色更柔和 */
}

/* 操作按钮样式 */
.actions {
  display: flex; /* 使用 flexbox 来排列按钮 */
  position: absolute;
  right: 0; /* 固定在右边 */
  background-color: #fff; /* 背景颜色 */
  border-radius: 8rpx; /* 圆角 */
  box-shadow: 0 0 5px rgba(0, 0, 0, 0.1); /* 添加阴影 */
}

.actions button {
  margin: 0 5rpx;
  background-color: #007aff; /* 按钮背景颜色 */
  color: white; /* 按钮文字颜色 */
  border: none;
  padding: 8rpx 12rpx; /* 内边距 */
  border-radius: 5rpx; /* 圆角 */
  font-size: 24rpx; /* 字体大小 */
}

.actions button:hover {
  background-color: #005bb5; /* 悬停时的背景颜色 */
}

/* 固定表单样式 */
.fixed-form {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background-color: #ffffff;  /* 背景颜色 */
  border-top: 1px solid #ddd;  /* 顶部边框 */
  padding: 20rpx;  /* 内边距 */
  box-shadow: 0 -2px 5px rgba(0, 0, 0, 0.1);  /* 阴影效果 */
  z-index: 1000;  /* 确保在最上层 */
}

.fixed-form .form-item {
  margin-bottom: 10rpx;  /* 每个表单项之间的间距 */
}

.fixed-form input {
  border: 1px solid #ccc;  /* 输入框边框 */
  border-radius: 5rpx;  /* 圆角 */
  padding: 10rpx;  /* 内边距 */
  font-size: 28rpx;  /* 字体大小 */
  width: 100%;  /* 100% 宽度 */
}

.fixed-form input:focus {
  border-color: #007aff;  /* 聚焦时边框颜色 */
}

.fixed-form button {
  background-color: #007aff;  /* 按钮背景颜色 */
  color: white;  /* 按钮文字颜色 */
  border: none;  /* 去掉边框 */
  padding: 10rpx 20rpx;  /* 内边距 */
  border-radius: 5rpx;  /* 圆角 */
  font-size: 28rpx;  /* 按钮文字大小 */
  cursor: pointer;  /* 鼠标指针样式 */
}

.fixed-form button:hover {
  background-color: #005bb5;  /* 悬停时的背景颜色 */
}
