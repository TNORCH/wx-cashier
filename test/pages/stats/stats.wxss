/* 筛选区域样式 */
.filter-container {
  padding: 15px;
  background-color: #f5f5f5;
  border-bottom: 1px solid #ddd;
}

.filter-header {
  display: flex;
  align-items: center;
  margin-bottom: 10px;
}

.filter-label {
  font-size: 16px;
  font-weight: bold;
  color: #333;
}

.filter-icon {
  width: 20px;
  height: 20px;
  margin-left: 5px;
}

.picker {
  display: flex;
  justify-content: space-between;
  align-items: center;
  background-color: #fff;
  padding: 10px;
  border: 1px solid #007acc;
  border-radius: 5px;
}

.picker-text {
  font-size: 16px;
  color: #007acc;
}

.picker-icon {
  width: 16px;
  height: 16px;
}
/* 统计展示区域 */
.stats-container {
  padding: 20px;
  display: flex;
  flex-direction: column;
  gap: 15px;
}

.stat-card {
  background-color: #fff;
  padding: 20px;
  border-radius: 8px;
  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.stat-value {
  font-size: 24px;
  font-weight: bold;
  color: #333;
  margin-bottom: 5px;
}

.stat-title {
  font-size: 14px;
  color: #666;
}

